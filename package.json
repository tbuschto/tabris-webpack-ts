{
  "main": "dist",
  "private": true,
  "scripts": {
    "test": "npm run build && npm run lint && npm run mocha",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src test",
    "mocha": "mocha --require ts-node/register ./test/*.test.*",
    "build": "tsc -p .",
    "watch": "tsc -p . -w --preserveWatchOutput --inlineSourceMap",
    "start": "tabris serve -a -w"
  },
  "dependencies": {
    "tabris": "~3.7.1"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.0",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "eslint": "^7.26.0",
    "eslint-plugin-react": "^7.23.2",
    "mocha": "^8.4.0",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.6.0",
    "ts-node": "^9.1.1",
    "typescript": "~3.8.3"
  }
}
